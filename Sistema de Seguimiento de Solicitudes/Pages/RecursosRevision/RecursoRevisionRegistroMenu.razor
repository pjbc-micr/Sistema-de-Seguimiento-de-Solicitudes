@page "/menu/recursos-revision/registro"

<h3 class="text-primary">Bandeja de Registro del Recurso de Revisión</h3>
<p class="text-secondary">Seleccione una opción:</p>

<div class="row mt-4">

    <div class="card opcion-modulo" @onclick="IrAgregar">
        <div class="card-body text-center">
            <h5 class="card-title text-primary">Agregar Recurso de Revisión</h5>
            <p class="card-text">Registrar un nuevo recurso.</p>
        </div>
    </div>

    <div class="card opcion-modulo" @onclick="IrExpedienteDigital">
        <div class="card-body text-center">
            <h5 class="card-title text-primary">Expediente Digital</h5>
            <p class="card-text">Acceder al expediente del recurso.</p>
        </div>
    </div>

</div>

@code {
    [Inject] NavigationManager? Navigation { get; set; }

    void IrAgregar()
    {
        Navigation?.NavigateTo("/menu/recursos-revision/registro/agregar");
    }

    void IrExpedienteDigital()
    {
        Navigation?.NavigateTo("/menu/recursos-revision/registro/expediente");
    }
}

