@page "/menu/recursos-revision"

<div class="container mt-4">
    <h3 class="text-primary">Recursos de Revisión</h3>
    <p class="text-secondary">Seleccione una opción:</p>

    <div class="row mt-4">

        <div class="card opcion-modulo" @onclick="IrARegistro">
            <div class="card-body text-center">
                <h5 class="card-title text-primary">Bandeja de Registro</h5>
                <p class="card-text">Registrar un nuevo recurso de revisión.</p>
            </div>
        </div>

        <div class="card opcion-modulo" @onclick="IrABusqueda">
            <div class="card-body text-center">
                <h5 class="card-title text-primary">Búsqueda</h5>
                <p class="card-text">Consultar recursos ya registrados.</p>
            </div>
        </div>

        <div class="card opcion-modulo" @onclick="IrAEstadisticas">
            <div class="card-body text-center">
                <h5 class="card-title text-primary">Datos Estadísticos</h5>
                <p class="card-text">Ver reportes y estadísticas.</p>
            </div>
        </div>
    </div>
</div>

@code {

    private void IrARegistro()
    {
        // 📌 Esta es la ruta CORRECTA para el menú de "Bandeja de Registro"
        Navigation.NavigateTo("/menu/recursos-revision/registro");
    }

    private void IrABusqueda()
    {
        Navigation.NavigateTo("/menu/recursos-revision/busqueda");
    }

    private void IrAEstadisticas()
    {
        Navigation.NavigateTo("/menu/recursos-revision/estadisticas");
    }

    [Inject]
    public NavigationManager Navigation { get; set; } = default!;
}
